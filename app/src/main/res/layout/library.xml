<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Library">

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:layout_width="@dimen/libraryListWidth"
        android:layout_height="@dimen/libraryListHeight"
        android:layout_marginBottom="@dimen/extraWideMargin"
        android:orientation="vertical"
        android:paddingLeft="@dimen/standardMargin"
        android:paddingStart="@dimen/standardMargin"
        android:paddingRight="@dimen/standardMargin"
        android:paddingEnd="@dimen/standardMargin"
        android:paddingTop="@dimen/standardMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14999998" />

    <Button
        android:id="@+id/libraryHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standardMargin"
        android:layout_marginStart="@dimen/libraryHomeBtnMarginStart"
        android:text="@string/home_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/libraryNowPlayingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standardMargin"
        android:layout_marginEnd="@dimen/wideMargin"
        android:text="@string/now_playing_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>